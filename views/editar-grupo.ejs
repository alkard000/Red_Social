<main class="contenedor contenedor-formularios no-padding">
    <h1><%- nombrePagina %> </h1>

    <form class="default-form" method="POST">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" value="<%= grupo.nombre %>" name="nombre" placeholder="Nombre Grupo">
        </div>
        <div class="descripcion campo">
            <label>Descripcion</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= grupo.descripcion %> ">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Categoria</label>
            <select name="categoria">
                <option value="" selected disabled>--Elige Categoria--</option>
                <% categorias.forEach(categoria => { %> 
                    
                    <option value="<%= categoria.id %>" 
                        <%= (grupo.categoriaId === categoria.id) ? 'selected' : '' %>
                    > 
                    <%= categoria.nombre %></option><%#OPERADOR TERNARIO DONDE, SI LA CATEGORIA ES IGUAL A LA CATEGORIA A EDITAR, 
                                                        ENTONCES AGREGAR EL ATRIBUTO 'SELECT', EN CASEO CONTRARIO NO SE LE AGREGA NADA  %>   

                <% }) %> 
            </select>
        </div>
        <div class="campo">
            <label>Sitio Web o Red Social</label>
            <input type="url" name="url" placeholder="Sitio Web o Red Social" value="<%= grupo.url %> ">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Guardar Cambio" class="btn btn-rosa">
        </div>
    </form>
</main>