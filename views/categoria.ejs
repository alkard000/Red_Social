<div class="contenedor proximos-eventos">
    <h1><%= nombrePagina %></h1>        
    <% if(meetis.length > 0) {%> 
        <div class="grid columnas-md-3 ">
            <% meetis.forEach(meeti => { %> 
                <div class="card">
                    <% if(meeti.grupo.imagen) {%> 
                        <img src="/uploads/groups/<%= meeti.grupo.imagen %>">
                    <% } else {%> 
                        <img src="/img/meeti.png">
                    <% } %> 
                    <div class="card-texto">
                        <% moment.locale('es'); %> 
                        <% const fecha = meeti.fecha + ' ' + meeti.hora %> 
                        <p class="fecha"><%= moment(fecha).format('LLLL') %> horas</p>
                        <a href="#">
                            <h3><%= meeti.titulo %> </h3>
                        </a>
                        <div class="info-autor">
                            <div class="imagen">
                                <% if(meeti.usuario.imagen) {%>
                                    <img src="/uploads/perfiles/<%= meeti.usuario.imagen %>">
                                <% } %>  
                            </div>
                            <div class="informacion">
                                <p>Organizado por:</p>
                                <p class="autor"><%= meeti.usuario.nombre %> </p>
                            </div>
                        </div>

                    </div>
                </div><!--FIN DE CARD-->
            <% }) %> 
        </div><!--FIN DEL GRID-->
    <% } else {%> 
        <p>No existen Meetis para esta Categoria</p>
    <% } %> 
</div>