<main class="contenedor contenedor-formularios no-padding">
    <h1><%- nombrePagina %> </h1>

    <form action="/nuevo-grupo" class="default-form" method="POST" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Nombre Grupo">
        </div>
        <div class="descripcion campo">
            <label>Descripcion</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Categoria</label>
            <select name="categoria">
                <option value="" selected disabled>--Elige Categoria--</option>
                <% categorias.forEach(categoria => { %> 
                    
                    <option value="<%= categoria.id %> "><%= categoria.nombre %> </option>

                <% }) %> 
            </select>
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen">
        </div>
        <div class="campo">
            <label>Sitio Web o Red Social</label>
            <input type="url" name="url" placeholder="Sitio Web o Red Social">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Crear Grupo" class="btn btn-rosa">
        </div>
    </form>
</main>